{% macro as_table(rows, headers=None) %}
    <table>
        {% if headers %}
            <tr>
                {% for col in headers %}
                    <th>{{ col.replace("_", " ").title() }}</th>
                {% endfor %}
            </tr>
        {% endif %}
        {% for row in rows %}
            <tr>
                {% for col in row %}
                    <td>{{ col }}</td>
                {% endfor %}
            </tr>
        {% endfor %}
    </table>
{% endmacro %}

